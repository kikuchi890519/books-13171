        </div>
        <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
        <div class="weight-bold-text">
          出版社
          <%# <span class="indispensable">必須</span> %>
        </div>
        <%= f.collection_select(:publishing_company_id, PublishingCompany.all, :id, :name, {}, {class:"select-box", id:"item-sales-status"}) %>
      </div>
    </div>
    <div class="items-explain">
        <div class="weight-bold-text">
          <%# 得られる学び %>
          <%# <span class="indispensable">任意</span> %>
        </div>
        <%= f.text_area :details, class:"items-text", id:"item-info", placeholder:"本を読んで得られた学び" ,rows:"7" ,maxlength:"1000" %>
