    <div class="new-items">
      <div class="weight-bold-text">
        <%# 題名 %>
        <%# <span class="indispensable">必須</span> %>
      </div>
      <%= f.text_area :name, class:"items-text", id:"item-name", placeholder:"本のタイトル", maxlength:"40" %>

      <div class="weight-bold-text">
        <%# 著者 %>
        <%# <span class="indispensable">必須</span> %>
      </div>
      <%= f.text_area :name, class:"items-text", id:"item-name", placeholder:"著者", maxlength:"40" %>
      
      <div class="items-explain">
        <div class="weight-bold-text">
         <%# 要約 %>
          <%# <span class="indispensable">必須</span> %>
        </div>
        <%= f.text_area :details, class:"items-text", id:"item-info", placeholder:"本の要約" ,rows:"7" ,maxlength:"1000" %>
      </div>
    </div>
