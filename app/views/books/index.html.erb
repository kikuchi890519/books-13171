    <ul class='book-lists'>

    <% @books.each do |book| %>
      <li class='list'>

         <p><a> 紹介者 </a><%= "#{book.user.nickname}"%></p>
          <%= link_to book_path(book) do %>
          <div class='item-img-content'>
           <%= image_tag book.image, class: "item-img" %>
            <div class='item-info'>
              <h3 class='item-name'>
                <p><a>著者</a><%= book.author %></p>
              </h3>
